.resources-container {
    flex-direction: column;
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: rgba(0,0,0,0.7);
    padding: 10px;
    border-radius: 5px;
}

.resource-item {
    flex-direction: row;
    margin: 2px 0;
}

.resource-icon {
    width: 32px;
    height: 32px;
    margin-right: 8px;
}

.resource-text {
    font-size: 16px;
    color: white;
    -unity-font-style: bold;
}